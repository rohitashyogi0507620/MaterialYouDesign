<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            tools:ignore="MissingConstraints">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fun_Navigationrailsview"
                android:text="Naviagton Rails View"
                tools:ignore="MissingConstraints"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fun_DatepickerDialog"
                android:text="Material Date picker Dialog"
                tools:ignore="MissingConstraints"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fun_DateRangePickerDialog"
                android:text="Material DAte Range Picker"
                tools:ignore="MissingConstraints"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_showBasicdialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material Basic Diallog "
                tools:ignore="MissingConstraints"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_showFullScreendialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material Full Screen Diallog "
                tools:ignore="MissingConstraints"></com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/navigation_rail_menu"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:visibility="gone"
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        app:menu="@menu/navigation_rail_menu"
        app:headerLayout="@layout/layout_header"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>